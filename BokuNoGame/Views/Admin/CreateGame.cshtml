@model BokuNoGame.ViewModels.CreateGameViewModel

<div class="row">
    <form asp-controller="Admin" asp-action="AddGameToDB" method="post">
        <div class="form-group">
            <label asp-for="Game.Name">Название игры</label>
            <div class="col-md-5">
                <input asp-for="Game.Name" class="form-control"/>
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Добавить"/>
    </form>
</div>
